
<!DOCTYPE html>
<html>
<head>
  <title>Nimap Machine Test</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="container">
  <h2>Category Master</h2>

  <form class="form-inline" action="/categories/add" method="POST">
    <input
      type="text"
      name="category_name"
      placeholder="Enter category name"
      required
    />
    <button type="submit">Add Category</button>
  </form>

  <ul class="list">
    <% categories.forEach(c => { %>
      <li class="list-item">
        <span class="item-name"><%= c.category_name %></span>

        <div class="actions">
          <a class="btn btn-edit" href="/categories/edit/<%= c.category_id %>">Edit</a>
          <a class="btn btn-delete" href="/categories/delete/<%= c.category_id %>">Delete</a>
        </div>
      </li>
    <% }) %>
  </ul>

  <a class="btn btn-link" href="/products">Go to Products</a>
</div>

</body>
</html>